.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
    margin-bottom: 40rpx;
}

.header {
    box-sizing: border-box;
    background-color: #ffffff;
    position: fixed;
    height: 100rpx;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
    display: flex;
    width: 750rpx;
    align-items: center;
    z-index: 99;
    /* padding-left:20rpx; */
    padding: 0 20rpx;
}

.search-container {
    flex: 1;
    display: flex;
    align-items: center;
    background-color: #f5f5f5;
    border-radius: 50px;
    box-sizing: border-box;
}
.cancel {
    line-height: 68rpx;
    width: 120rpx;
    text-align: center;
    border: none;
    /* margin-right: 10rpx; */
}
.in-bar {
    color: #999;
}

.bar {
    height: 68rpx;
    flex: 1;
    font-size: 28rpx;
}

.icon {
    width: 28rpx;
    height: 28rpx;
    padding-left: 24rpx;
    padding-right: 16rpx;
}

.clear_box{
    width: 40rpx;
    height: 68rpx;
    padding-left: 24rpx;
    padding-right: 24rpx;
    line-height: 68rpx;
    text-align: center;
}
.cancel-img {
    width: 28rpx;
    height: 28rpx;
}

.history {
    width: 690rpx;
    margin: 40rpx 0 20rpx 0;
    display: flex;
    font-size: 28rpx;
    margin-top: 160rpx;
    flex-direction: column;
}

.hot-search {
    margin-top: 70rpx;
}

.title {
    line-height: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.books-container v-book {
    margin-bottom: 25rpx;
}

.books-container {
    width: 570rpx;
    margin-top: 100rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding: 0 90rpx 0 90rpx;
    justify-content: space-between;
}

.loading {
    margin: 50rpx 0 50rpx 0;
}

.loading-center {
    position: absolute;
    top: 50%;
    left: 50%;
}

.empty-tip {
    display: inline-block;
    width: 100%;
    text-align: center;
    position: absolute;
    top: 50%;
}

.chunk {
    height: 30rpx;
    width: 10rpx;
    background-color: #000;
    display: inline-block;
    margin-right: 20rpx;
}

.tags {
    /* padding-left:15px; */
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-top: 24rpx;
    padding-left: 30rpx;
    width: 630rpx;
}

.tags v-tag {
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}
